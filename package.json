{
  "name": "metro-travel",
  "type": "module",
  "version": "1.27.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "test": "NODE_ENV=test npm run db:reset && NODE_ENV=test npm run db:migrate && vitest --no-file-parallelism vitest",
    "db:new-migration": "npx knex --knexfile db/knexfile.js migrate:make $migrationname",
    "db:create": "node scripts/database/create-database",
    "db:delete": "node scripts/database/drop-database",
    "db:empty": "node scripts/database/empty-database",
    "db:reset": "npm run db:delete && npm run db:create",
    "db:migrate": "knex --knexfile db/knexfile.js migrate:latest",
    "db:rollback:latest": "knex --knexfile db/knexfile.js migrate:down",
    "screenshots": "node scripts/capture-version.js"
  },
  "dependencies": {
    "@nuxt/content": "^3.6.3",
    "@nuxtjs/leaflet": "^1.2.6",
    "@tailwindcss/vite": "^4.1.11",
    "better-sqlite3": "^12.2.0",
    "canvas-confetti": "^1.9.3",
    "daisyui": "^5.0.46",
    "leaflet": "^1.9.4",
    "nuxt": "^3.17.6",
    "tailwindcss": "^4.1.11",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "knex": "^3.1.0",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "puppeteer": "^24.12.1"
  }
}
